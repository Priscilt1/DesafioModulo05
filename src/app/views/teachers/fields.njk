<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{ teacher.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do Professor" 
            value="{{ teacher.name }}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth_date" 
            value="{{ teacher.birth_date }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
            <option value="EM"
            {% if teacher.education_level == "EM"%}selected{%endif%}}
            >Ensino Médio Completo</option>

             <option value="ES"
            {% if teacher.education_level == "ES"%}selected{%endif%}}
            >Ensino Superior Completo</option>

             <option value="M"
            {% if teacher.education_level == "M"%}selected{%endif%}}
            >Mestrado</option>

             <option value="D"
            {% if teacher.education_level == "D"%}selected{%endif%}}
            >Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="P" 
                {% if teacher.gender == 'P'%} 
                    checked=
                {% endif %}> Presencial
        </span>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="D"
                {% if teacher.gender == 'D'%} 
                    checked=    
                {% endif %}> Á distância
        </span>
    </div>
</div>

<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input 
            type="text" 
            name="subjects_taught" 
            placeholder="Separe por vírgula. Ex.: Matemática, Física"
            value="{{ teacher.subjects_taught }}"
        >
    </div>
</div>
<button type="submit">Salvar</button>
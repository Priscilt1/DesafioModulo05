{% extends "layout.njk" %}


{% block content %}
<div class="card table-container">
    <a href="/teachers/create">Novo Professor</a>
    <table> 
        <thead> 
            <tr> 
                <th>Professor</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody> 
            {% for teacher in teachers %}
                <tr>
                    <td><span style="background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}</td>   
                        <td> 
                            {% for class_type in teacher.class_type.split(",")%} 
                            <div id="td-class_types">{{class_type}} </div>  
                            {% endfor %} </td>                            
                    <td> <a href="/teachers/{{teacher.id}}">Ver detalhes</a> </td>
                </tr>
            {% endfor%}
        </tbody>
    </table>


</div>
{% endblock content %}



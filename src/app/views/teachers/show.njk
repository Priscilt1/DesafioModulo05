{% extends "layout.njk" %}


{% block content %}
<div class="card">

    <section class="avatar" 
    style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">

    </section>

    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

         <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{ teacher.education_level }}</div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>{{ "Presencial" if teacher.class_type == "P" else "Á distância"}}</div>
        </div>

        <div class="item">
            <div>Aula</div>
            <div>
                {% for subjects_taught in teacher.subjects_taught %}
                <span>{{ subjects_taught }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

       

        <form id="form-delete" action="/teachers?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{teacher.id}}>
            <div id="buttons">
            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
            <button type="submit">Deletar</button>
            </div>
        </form>
        
        </section>

        <script src="/mensagedelet.js"></script>


    </section>

</div>
{% endblock content %}
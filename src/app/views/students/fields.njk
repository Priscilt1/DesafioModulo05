<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{ student.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do Aluno" 
            value="{{ student.name }}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth" 
            value="{{ student.birth }}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email" 
            value="{{ student.email }}">
    </div>
</div>

<div class="item">
    <div>Ano escolar </div>
    <div>
        <select name="schoolyear">
            <option value="5"
            {% if student.schooling == "5"%}selected{%endif%}}
            >5º Ano</option>

             <option value="6"
            {% if teacher.schooling == "6"%}selected{%endif%}}
            >6º Ano</option>

             <option value="7"
            {% if teacher.schooling == "7"%}selected{%endif%}}
            >7º Ano</option>

             <option value="8"
            {% if teacher.schooling == "8"%}selected{%endif%}}
            >8º Ano</option>

            <option value="9"
            {% if teacher.schooling == "9"%}selected{%endif%}}
            >9º Ano</option>

            <option value="1"
            {% if teacher.schooling == "1"%}selected{%endif%}}
            >1º Ano</option>

            <option value="2"
            {% if teacher.schooling == "2"%}selected{%endif%}}
            >2º Ano</option>

            <option value="3"
            {% if teacher.schooling == "3"%}selected{%endif%}}
            >3º Ano</option>

        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária semanal</div>
    <div>
        <input 
            type="number" 
            name="workload" 
            value="{{ student.workload }}">
    </div>
</div>


<button type="submit">Salvar</button>
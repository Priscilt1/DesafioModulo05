{% extends "layout.njk" %}


{% block content %}
<div class="card">

    <section class="avatar" 
    style="background: url({{ student.avatar_url }}) no-repeat center center / cover">

    </section>

    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Estudante</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{ student.birth_date }}</div>
        </div>

          <div class="item">
            <div>Email</div>
            <div>{{ student.email }}</div>
        </div>

         <div class="item">
            <div>Ano escolar </div>
            <div>{{ student.schoolyear }}</div>
        </div>

        <div class="item">
            <div>Carga horária semanal</div>
            <div>{{ student.workload}}</div>
        </div>

         <div class="item">
            <div>Aluno de: </div>
            <div>{{ student.teacher_name}}</div>
        </div>

        <form id="form-delete" action="/students?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{student.id}}>
                <div id="buttons">
            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
            <button type="submit">Deletar</button>
            </div>
        </form>
        
        <script src="/mensagedelet.js"></script>
        

    </section>

</div>
{% endblock content %}